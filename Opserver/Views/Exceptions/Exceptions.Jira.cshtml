@model List<JiraAction>
@{
    Layout = null;
}
@if (Model != null && Model.Any())
{
    <div class="issue-tracker-action-container">
        <p class="error-time" style="margin:5px 0 5px 0">
            Jira Actions
            @foreach (var action in Model)
            {
                <span class="issue-tracker-action-link">
                    ( <a class="info-link" data-actionid="@action.Id"  href="@Url.Action("jiraaction")">@action.Caption</a>  )
                </span>
            }
        </p>
        <p class="error-time issue-tracker-brwoser-links-container" style="display: none; margin: 5px 0 5px 0">
            Browse in Jira
        </p>
    </div>
}